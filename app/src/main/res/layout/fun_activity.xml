<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/fun_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fun_img"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:src="@drawable/skcs_logo"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/fun_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fun_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.5"
                        android:fontFamily="@font/robotomediumitalic"
                        android:gravity="center"
                        android:text="BC"
                        android:textColor="@color/colorSecondary"
                        android:textSize="25dp"
                        android:textStyle="bold|italic"
                        app:layout_constraintBottom_toTopOf="@id/fun_title_q"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/fun_img"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/fun_title_q"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintHorizontal_weight="1.5"
                        android:fontFamily="@font/robotolightitalic"
                        android:gravity="center"
                        android:text="Budget &amp;Healthy Food"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/fun_img"
                        app:layout_constraintTop_toBottomOf="@id/fun_title"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
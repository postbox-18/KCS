                <!--</androidx.cardview.widget.CardView>-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_ct"
            app:layout_constraintVertical_weight="0.15">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/register_btn_silver"
                android:clickable="false"
                android:fontFamily="@font/robotocondensedbold"
                android:text="verify"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/re_sendSMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Please Re-send SMS"
                android:textAlignment="center"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/normalSize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recyclerview_order_list_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/session_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoblackitalic"
                    android:gravity="left"
                    android:text="@string/session"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoblackitalic"
                    android:gravity="left"
                    android:layout_marginStart="35dp"
                    android:text="12/12/2012 12:12 AM"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoblackitalic"
                    android:gravity="left"
                    android:layout_marginStart="35dp"
                    android:text="0000"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_order_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                tools:listitem="@layout/bottom_sheet_order_header" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>